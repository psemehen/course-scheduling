<h1 class="section-header">Student List</h1>

<% if @students.any? %>
  <table class="students-table">
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.full_name %></td>
          <td><%= student.email %></td>
          <td>
            <%= link_to 'View Enrollments', student_enrollments_path(student), class: 'view-button' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="no-data-message">No students found.</p>
<% end %>
