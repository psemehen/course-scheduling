<h1 class="section-header"><%= @student.full_name %>'s Enrollments</h1>

<h2 class="section-header">Current Enrollments</h2>
<%= link_to 'Download Schedule PDF', download_pdf_student_enrollments_path(@student),
            class: 'download-pdf-button' %>

<% if @enrollments.any? %>
  <table class="enrollments-table">
    <thead>
    <tr>
      <th>Subject</th>
      <th>Teacher</th>
      <th>Classroom</th>
      <th>Days of week</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Duration</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <%= render @enrollments %>
    </tbody>
  </table>
<% else %>
  <p class="no-data-message">Not enrolled in any sections.</p>
<% end %>

<h2 class="section-header">Available Sections</h2>
<% if @available_sections.any? %>
  <table class="enrollments-table">
    <thead>
    <tr>
      <th>Subject</th>
      <th>Teacher</th>
      <th>Classroom</th>
      <th>Days of week</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Duration</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'available_section', collection: @available_sections %>
    </tbody>
  </table>
<% else %>
  <p class="no-data-message">No available sections.</p>
<% end %>

<%= link_to 'Back to Student List', students_path, class: 'back-button' %>
